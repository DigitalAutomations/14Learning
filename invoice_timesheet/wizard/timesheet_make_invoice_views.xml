<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_timesheet_invoice" model="ir.ui.view">
        <field name="name">Invoice Timesheet</field>
        <field name="model">timesheet.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice Timesheet">
                <p class="oe_grey">
                    Invoices will be created in draft so that you can review
                    them before validation.
                </p>
                <group>
                    <div attrs="{'invisible': ['|',('groupby_partner','=',True),('groupby_task_partner','=',True)]}">
                        <div>
                            <field name="groupby_project"/>
                            <label for="groupby_project"/>
                        </div>
                    </div>
                    <br/>
                    <div attrs="{'invisible': ['|',('groupby_partner','=',True),('groupby_project','=',True)]}">
                        <div>
                            <field name="groupby_task_partner"/>
                            <label for="groupby_task_partner"/>
                        </div>
                    </div>
                    <br/>
                    <div attrs="{'invisible': ['|',('groupby_project','=',True),('groupby_task_partner','=',True)]}">
                        <div>
                            <field name="groupby_partner"/>
                            <label for="groupby_partner"/>
                        </div>
                    </div>
                    <br/>
                    <div>
                        <div>
                            <field name="print_time"/>
                            <label for="print_time"/>
                        </div>
                    </div>
                    <div>
                        <div>
                            <field name="print_description"/>
                            <label for="print_description"/>
                        </div>
                    </div>
                </group>
                <footer>
                    <button name="create_invoices" string="Create and View Invoices" type="object"
                        context="{'open_invoices': True}" class="btn-primary"/>
                    <button name="create_invoices" string="Create Invoices" type="object"
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_timesheet_invoice" model="ir.actions.act_window">
        <field name="name">Invoice Timesheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">timesheet.invoice</field>
        <field name="binding_model_id" ref="account.model_account_analytic_line"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>